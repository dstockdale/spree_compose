<%= form_for([:admin, @menu]) do |f| %>
  <%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @menu } %>

  <%= f.field_container :name, class: ['form-group'] do %>
    <%= f.label :name, Spree.t(:name, scope: :menu) %> <span class="required">*</span>
    <%= f.text_field :name, class: 'form-control name' %>
    <%= f.error_message_on :name %>
  <% end %>

  <div class="form-actions" data-hook="buttons">
    <%= button Spree.t('actions.create'), 'ok', 'submit', {class: 'btn-success'} %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= button_link_to Spree.t('actions.cancel'), admin_menus_url, :icon => 'remove' %>
  </div>
<% end %>